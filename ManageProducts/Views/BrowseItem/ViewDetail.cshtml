@model ManageProducts.Models.Item

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>
<h4>@Html.DisplayFor(model => model.Name)</h4>
<hr />

<div id="container">
    <div class="desc">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Department.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Department.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

        </dl>
    </div>

    <div class="thumbnail">
        @if (Model.Thumbnail != null) { // There is a thumbnail
            // The source goes to ThumbnailController Index action
            <img src="~/Thumbnail?id=@Model.Thumbnail.ThumbnailId" alt="thumbnail" />
        }
        else { // No thumbnail
            <p style="text-align:center">Không hình minh hoạ</p>
        }
    </div>
</div>

<p class="back_al">
        @Html.ActionLink("Quay lại", null, null, null, new { href = Request.UrlReferrer })
</p>


    


